<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundregis"
    tools:context=".DetailNewsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleNewD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bariol_regular"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="Lắp còi hơi rồi bấm inh ỏi, một tài xế taxi bị phạt tiền triệu"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/dateofNewD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/bariol_regular"
            android:gravity="right"
            android:text="16/8/2022"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imgNewssD"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:src="@drawable/imgnews" />

        <TextView
            android:id="@+id/descriptionNewsD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/bariol_regular"
            android:text="Thừa nhận lắp còi hơi để tranh đường mỗi khi gặp kẹt xe, một tài xế taxi tại Đà Nẵng bị phạt tiền triệu, tước bằng lái 2 tháng."
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>